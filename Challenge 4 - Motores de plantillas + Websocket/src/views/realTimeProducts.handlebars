<div class="form-container">
    <form id="feedback-form" action="/api/products" method="post">
      <h2 class="header">Register New Product</h2>
        <input type="text" name="title" placeholder="Title">
        <input type="text" name="description" placeholder="Description">
        <input type="number" placeholder="Price" name="price">
        <input type="text" placeholder="Code" name="code">
        <input type="number" placeholder="Stock" name="Stock">
        <input type="text" placeholder="Status" name="status">
        <input type="text" placeholder="Category" name="category">
        <input type="text" placeholder="Thumbnails" name="thumbnails">
        <button type="submit">Submit</button>
    </form>
</div>

<ul class="cards">
    {{#if products}}
    {{#each products}}
    <li class="cards_item">
        <div class="card">
            <div class="card_image">
                 <img src={{this.thumbnails.[0]}}>
                 <span class="card_price"><span>$</span>{{this.price}}</span>
            </div>
            <div class="card_content">
                <h2 class="card_title">{{this.title}}</h2>
                <div class="card_text">
                  <p>{{this.description}}</p>
                </div>
            </div>
        </div>
    </li>
    {{/each}}
    {{/if}}
</ul>
<script src="/socket.io/socket.io.js"></script>
<script src="/index.js"></script>